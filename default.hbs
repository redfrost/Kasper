<!DOCTYPE html>
<html prefix="og: http://ogp.me/ns#">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  {{! Page Meta }}
  <title>{{meta_title}}</title>
  <meta property="og:site_name" content="{{@blog.title}}" />
  <meta property="og:title" content="{{meta_title}}" />
  <meta property="og:url" content="{{url}}" />
  <meta property="og:description" name="description" content="{{meta_description}}" />
  <meta property="og:type" content="blog" />
  <meta name="author" content="{{author.name}}">

  <!-- Icons -->
  <link rel="shortcut icon" href="assets/img/favicon.ico">
  <link rel="apple-touch-icon-precomposed" href="assets/img/apple-touch-icon.png">
  <meta property="og:image" content="{{@blog.logo}}" />

  <!-- Mobile -->
  <meta name="HandheldFriendly" content="True" />
  <meta name="MobileOptimized" content="320" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  {{! Styles'n'Scripts }}
	<script src="/assets/js/modernizr.js"></script>
  <link rel="stylesheet" type="text/css" href="/assets/css/screen.css" />
	<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">

	<script type="text/javascript" src="//use.typekit.net/ieg5weq.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  {{! Ghost outputs important style and meta data with this tag }}
  {{ghost_head}}
</head>

<body id="top" class="{{body_class}}">

  {{! Everything else gets inserted here }}
  {{{body}}}

  <footer class="site-footer">
    <a class="subscribe" href="{{@blog.url}}/rss/"><i class="fa fa-rss"></i><span class="tooltip">Subscribe!</span></a>
    <div class="inner">
			<section class="copyright">&copy; {{date format="YYYY"}} <a href="/">{{@blog.title}}</a> All rights reserved &bull; Powered by <a href="http://ghost.org">Ghost</a></section>
    </div>

		<ul id="social-menu">
			<li><a href="https://www.facebook.com/simonalexlim/"><i class="fa fa-facebook-square"></i> <span>Facebook</span></a></li>
			<li><a href="https://plus.google.com/102549346082939954948/"><i class="fa fa-google-plus-square"></i> <span>Google+</span></a></li>
			<!-- <li><a href="https://twitter.com/simonalexlim"><i class="fa fa-twitter-square"></i> <span>Twitter</span></a></li> -->
		</ul>

		<p class="back-top"><a href="#top">Back To Top</a></p>
  </footer>

  {{! Ghost outputs important scripts and data with this tag }}
  {{ghost_foot}}

  {{! The main JavaScript file for Casper }}
  <script type="text/javascript" src="/assets/js/jquery.fitvids.js"></script>
  <script type="text/javascript" src="/assets/js/index.js"></script>
	<script type="text/javascript" src="/assets/js/plugin.js"></script>
	<script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js"></script>

	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-36497213-2']);
